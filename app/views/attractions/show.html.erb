<h1>Attractions#show</h1>
<p id="notice"><%= notice %></p>

<div class="info pic"><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" alt=""></div>
<div class="info">
<p><%= @attraction.name %></p>
<p>Minimum Height: <%= @attraction.min_height %></p>
<p>Happiness Rating<%= @attraction.happiness_rating %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Tickets: <%= @attraction.tickets %></p>
<p><%= form_tag('/rides/new', method: :post) do %>
    <%= hidden_field_tag "user_id", current_user.id %>
    <%= hidden_field_tag "attraction_id", @attraction.id %>
  <%= submit_tag "Go on this ride" %>
  <%end%></p>
<p><% if @user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
    <% end %>
</p>
  </div>
