<%= form_for(@attraction) do |f| %>

    <div class="field">
      <%= f.label :name %> <br>
      <%= f.text_field :name %>
    </div>   
    
    <div class="field">
      <%= f.label :min_height, "How tall do you have to be (in inches)? "%><br>
      <%= f.number_field  :min_height %>
    </div>
    <div class="field">
      <%= f.label :happiness_rating, "How happy will it make you? (1-5 scale)
" %><br>
      <%= f.number_field  :happiness_rating %>
    </div>
    <div class="field">
      <%= f.label :nausea_rating, "How nauseous will it make you? (1-5 scale)
" %><br>
      <%= f.number_field :nausea_rating %>
    </div>
    <div class="field">
      <%= f.label :tickets, "How many tickets?
" %><br>
      <%= f.number_field  :tickets %>
    </div>
    <div class="field">
      <%= f.submit %>
    </div>
   <% end %>