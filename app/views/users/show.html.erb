<div class="info pic"></div>
<div class="info">
<% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
  <p><b>Name:</b> <%= @user.name %></p>
  <p><b>Mood:</b> <%= @user.mood %></p>
  <p><b>Tickets:</b> <%= @user.tickets %></p>
  <p><b>Height:</b> <%= @user.height %></p>
  <p><b><%= link_to "See attractions", attractions_path %></b></p>
  <p><%= link_to "Edit User", edit_user_path(@user) %></p>
</div>
